{
  "name": "@material-wc/root",
  "private": true,
  "packageManager": "yarn@4.12.0",
  "workspaces": [
    "packages/*",
    "apps/*",
    "tools/*",
    "lib"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -A --topological run build",
    "build:css": "node tools/css-builder/build.js",
    "dev": "yarn workspace @material-wc/storybook dev",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint packages/*/src/**/*.ts",
    "storybook": "yarn workspace @material-wc/storybook dev",
    "storybook:build": "yarn workspace @material-wc/storybook build"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.0",
    "@testing-library/dom": "^10.0.0",
    "@testing-library/jest-dom": "^6.6.0",
    "@vitest/browser": "^3.0.0",
    "autoprefixer": "^10.4.0",
    "cssnano": "^7.0.0",
    "glob": "^11.0.0",
    "jsdom": "^26.0.0",
    "lit": "^3.2.0",
    "postcss": "^8.5.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.0.0",
    "vitest": "^3.0.0"
  }
}
